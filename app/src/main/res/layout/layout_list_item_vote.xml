<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:background="@color/colorWhite"
    >

    <TextView
        android:id="@+id/textView_Count"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_name"
        android:text="100"
        android:textColor="@color/primary_text"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView_image"
        android:layout_width="70sp"
        android:layout_height="match_parent"
        android:layout_marginRight="10sp"
        android:layout_toEndOf="@id/textView_Count"
        android:src="@drawable/apple01" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView_image"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_name"
        android:layout_toEndOf="@id/imageView_image"
        android:text="Address"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_address"
        android:layout_toEndOf="@id/imageView_image"
        android:text="Details"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/buttonIncCount"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_arrow_upward_black_24dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/buttonDecCount"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/buttonIncCount"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:src="@drawable/ic_arrow_downward_black_24dp"
        android:visibility="gone" />

</RelativeLayout>